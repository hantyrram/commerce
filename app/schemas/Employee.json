{
 "$schema":"http://json-schema.org/draft-07/schema",
 "type":"object",
 "properties": {
  "_id": {
   "type": "string"
  },
  "employeeId":{
   "type":"string",
   "pattern":"^ht[0-9]+$"
  },
  "salutation":{
   "type":"string"
  },
  "fname":{
   "type":"string",
   "minLength":6,
   "maxLength":25
  },
  "mname":{
   "type":"string",
   "minLength":6,
   "maxLength":25
  },
  "lname":{
   "type":"string",
   "minLength":6,
   "maxLength":60
  },
  "gender":{
   "type":"string",
   "enum": ["male","female"]
  },
  "nationality":{
   "type":"string"
  },
  "dateOfBirth":{
   "type":"string",
   "format":"date"
  },
  "email":{
   "type":"string",
   "format":"email"
  },
  "alternateEmail":{
   "type":"string",
   "format":"email"
  },
  "joiningDate":{
   "type":"string",
   "format":"date"
  },
  "jobTitle": {
   "type":"string"
  },
  "permanentAddress":{
   "type":"string",
   "minLength":6,
   "maxLength":100
  },
  "currentAddress":{
   "type":"string",
   "minLength":6,
   "maxLength":100
  },
  "position":{
   "type":"string",
   "maxLength":50
  },
  "jobDescription":{
   "type":"string",
   "maxLength":100
  },
  "contactNo":{
   "type":"string"
   
  },
  "createdOn":{
   "type":"string",
   "format": "date-time"
  },
  "createdBy":{
   "type":"string"
  },
  "modifiedOn":{
   "type":"string",
   "format": "date-time"
  },
  "modifiedBy":{
   "type":"string"
  },
  "lastModComment":{
   "type":"string"
  }
 },
 "additionalProperties": false,
 "required": [
  "fname","lname","gender","dateOfBirth","joiningDate","contactNo"
 ]
}