{
 "$schema":"http://json-schema.org/draft-07/schema",
 "type":"object",
 "properties": {
  "_id": {
   "type": "string"
  },
  "username":{
   "type":"string",
   "minLength":6,
   "maxLength":25,
   "pattern": "^[^\\s]+$"
  },
  "password":{
   "type":"string",
   "minLength":6,
   "maxLength":60,
   "pattern": "^[^\\s]+$"
  },
  "email":{
   "type":"string",
   "format": "email",
   "minLength":6,
   "maxLength":50
  },
  "roles":{
   "type":"array"
  }
 },
 "required": [
  "username","password"
 ]
}