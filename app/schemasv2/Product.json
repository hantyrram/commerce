{
   "$schema":"http://json-schema.org/draft-07/schema",
   "$id": "http://hantyr.com/schemas/Product.json",
   "type":"object",
   "properties": {
      "_op": {
         "$ref": "http://hantyr.com/schemas/definitions.json#/definitions/_op"
      },
      "name": {
         "type":"string",
         "minLength": 4
      },
      "netCost": {
         "type":"string"
      }      
   },
   "allOf": [      
      {
         "if" : {
            "properties": { "_op" : {"const": "create"} }
         },
         "then": {
            "required": ["name","netCost"]
         }
      }
   ]
   
   
  }