{
   "$schema":"http://json-schema.org/draft-07/schema",
   "$id": "http://hantyr.com/schemas/ShippingZone.json",
   "type":"object",
   "properties": {
      "_op": {
         "$ref": "http://hantyr.com/schemas/definitions.json#/definitions/_op"
      },
      "country": {
         "type":"string",
         "minLength": 3
      }   
   },
   "allOf": [
      {
         "if" : {
            "properties": { "_op" : {"const": "add"} }
         },
         "then": {
            "required": ["country"]
         }
      }
   ]
   
   
  }