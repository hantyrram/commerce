{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "Employee",
   "$comment": "_op is a meta property used by the schemaValidator to conditionally use <required> based on the _op value of an object",
   "type":"object",
   "properties": {           
      "_op": {
         "$ref": "definitions.json#/definitions/_op"
      },
      "_id":{
         "type":"string"
      },
      "employeeId":{
         "type":"string",
         "minLength":6,
         "maxLength": 15
      },
      "identity": {
         "$ref": "definitions.json#/definitions/identity"
      },      
      "userAccount": {
         "$ref": "definitions.json#/definitions/userAccount"
      },
      "country":{
         "type":"string"
      },      
      "city":{
         "type":"string"
      },      
      "address":{
         "type":"string"
      },      
      "zipcode":{
         "type":"string"
      },      
      "joiningDate": {
         "type":"string",
         "format": "date"
      },
      "jobTitle":{
         "type":"string"
      },      
      "designation":{
         "type":"string"
      },      
      "department":{
         "type":"string"
      },      
      "sssNo": {
         "type":"string"
      },

      "pagibigNo": {
         "type":"string"
      },

      "tinNo":{
         "type":"string"
      },
      "mobileNo":{
         "type":"string"
      },
      "email":{
         "type":"string",
         "format":"email"
      },
      "companyIssuedEmail":{
         "type":"string",
         "format":"email"
      },
      "companyIssuedMobileNo":{
         "type":"string"
      },
      "_metadata":{
         "type":"object"
      }
      
   },
   "additionalProperties":false,
   "allOf": [
      {
         "if" : {
            "properties": { "_op" : {"const": "edit"} }
         },
         "then": {
            "required": ["_id","employeeId","identity","country",
               "city","joiningDate","jobTitle","designation","department","mobileNo"]
         }
         
      },
      {
         "if" : {
            "properties": { "_op" : {"const": "create_empidManual"} }
         },
         "then": {
            "required": ["employeeId","identity","country",
               "city","joiningDate","jobTitle","designation","department","mobileNo"]
         }
         
      },
      {
         "if" : {
            "properties": { "_op" : {"const": "create"} }
         },
         "then": {
            "required": ["identity","country",
               "city","joiningDate","jobTitle","designation","department","mobileNo"]
         }
         
      }
   ]
   
   
}